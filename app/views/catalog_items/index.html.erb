<p id="notice"><%= notice %></p>

<h1>Catalog Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalog_items.each do |catalog_item| %>
      <tr>
        <td><%= catalog_item.name %></td>
        <td><%= catalog_item.description %></td>
        <td><%= link_to 'Show', catalog_item %></td>
        <td><%= link_to 'Edit', edit_catalog_item_path(catalog_item) %></td>
        <td><%= link_to 'Destroy', catalog_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Catalog Item', new_catalog_item_path %>
