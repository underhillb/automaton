<div id="jsGrid"></div>

<script>
$(function() {

  $("#jsGrid").jsGrid({
    height: "auto",
    width: "100%",

    sorting: true,
    filtering: true,
    inserting: true,
    paging: true,
    autoload: true,

    controller: {
      loadData: function(filter) {
        var d = $.Deferred();

        $.ajax({
          url: "/configuration_detail_types",
          dataType: "json",
          data: filter
        }).done(function(response) {
          d.resolve(response.value);
        });

        return d.promise();
      }
    },
    insertItem: function(item) {

          console.log(item);
      return $.ajax({
        type: "POST",
        url: "/configuration_detail_types",
        data: item,
        dataType: "json"
      }).done(function() {
        console.log("insertion completed");
      });

    },

    deleteItem: function(item) {
      console.log(item);

    },
    editItem: function(item) {
      console.log(item);

    },
    fields: [
      { name: "name", type: "text" },
      { name: "description", type: "textarea", width: 150 },
      { type: "control" }

    ]
  });

});
</script>
