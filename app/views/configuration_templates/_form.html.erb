<%= simple_form_for(@configuration_template) do |f| %>
<div class="container">
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%# f.input :version %>
    <%# f.association :user,:include_blank => false, :label_method => :full_name %>
    <%# f.input :group %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Save template" %>
    <%= link_to_add_association 'add configure', f, :configuration_details, "data-association-insertion-method" => :append, :class => "btn btn-default" %>
    <hr>
  </div>

  <div   id="configuration_details">
    <%= f.simple_fields_for :configuration_details do |configuration_detail| %>

    <%= render 'configuration_detail_fields', f: configuration_detail %>

    <% end %>
  </div>
  <hr>

  <% end %>
</div>

<div class="container">
	<div class="row">

        <div class="modal fade" id="enter_configure_data" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content" >
              <div id=data>
              </div>


            </div>
          </div>
        </div>


	</div>
</div>
<%=render partial: "configure_data"%>
