<%= simple_form_for(@configuration_template) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :blueprint_objects %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
