

<%= simple_form_for(@blueprint) do |f| %>
<div class="container">
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%# f.input :version %>
    <%# f.association :user,:include_blank => false, :label_method => :full_name %>
    <%# f.input :group %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Save Blueprint" %>
    <%= link_to_add_association 'add object', f, :blueprint_objects, "data-association-insertion-method" => :append, :class => "btn btn-default" %>
<hr>
  </div>





  <div   id="blueprint_objects">
  <%= f.simple_fields_for :blueprint_objects do |blueprint_object| %>

    <%= render 'blueprint_object_fields', f: blueprint_object %>

  <% end %>
</div>
<hr>

<% end %>
</div>
